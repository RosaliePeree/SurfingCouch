<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/messagebox2">

    <TextView
        android:id="@+id/message_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Name of the sender :"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_username"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:text="Content of the message that will be replaced at some point"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_text"
        android:text="Actual date of the message"
        android:background="@android:color/transparent"/>
</RelativeLayout>